<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teal_tones"
    tools:context="com.example.el_me.calculadora3.Main5Activity">

    <Button
        android:id="@+id/razapequeña"
        android:layout_width="145dp"
        android:layout_height="51dp"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/barra_de_boton"
        android:onClick="buttonClicked"
        android:text="Raza Chica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/razamediana"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/barra_de_boton"
        android:onClick="buttonClicked"
        android:text="Raza Mediana"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/razapequeña"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/razagrande"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/barra_de_boton"
        android:onClick="buttonClicked"
        android:text="Raza Gigante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.386"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/razamediana"
        tools:ignore="ContentDescription"/>

    <Button
        android:id="@+id/razagigante"
        android:layout_width="147dp"
        android:layout_height="55dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/barra_de_boton"
        android:onClick="buttonClicked"
        android:text="Raza Gigante"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/razagrande" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.83"
        app:srcCompat="@drawable/perro_mediano"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="213dp"
        android:layout_height="163dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintBottom_toTopOf="@+id/razagigante"
        app:layout_constraintEnd_toStartOf="@+id/razagigante"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.757"
        app:srcCompat="@drawable/perro_grande"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="217dp"
        android:layout_height="244dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/razagrande"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/razagrande"
        app:layout_constraintVertical_bias="0.492"
        app:srcCompat="@drawable/perro_gigante"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="169dp"
        android:layout_height="124dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/perro_pequeno"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/texto"
        tools:ignore="ContentDescription" />
</android.support.constraint.ConstraintLayout>
